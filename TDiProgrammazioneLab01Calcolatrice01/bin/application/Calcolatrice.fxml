<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane prefHeight="400.0" prefWidth="300.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.40" fx:controller="application.CalcolatriceController">
   <top>
      <Label text="Calcolatrice" BorderPane.alignment="CENTER">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
   </top>
   <bottom>
      <Label fx:id="lblStatus" text="Status:" BorderPane.alignment="CENTER_LEFT" />
   </bottom>
   <center>
      <VBox prefHeight="226.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="52.0" prefWidth="200.0">
               <children>
                  <Label text="Operando 1" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtOperandoUno">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="52.0" prefWidth="200.0">
               <children>
                  <Label text="Operando 2">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtOpernadoDue">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="52.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#doAdd" text="+">
                     <HBox.margin>
                        <Insets right="49.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnSubtract" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#doSubtract" text="-">
                     <HBox.margin>
                        <Insets right="49.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnMoltiply" layoutX="36.0" layoutY="10.0" mnemonicParsing="false" onAction="#doMoltiply" text="*">
                     <HBox.margin>
                        <Insets right="49.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnDivide" layoutX="62.0" layoutY="10.0" mnemonicParsing="false" onAction="#doDivide" text="/">
                     <HBox.margin>
                        <Insets right="49.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="52.0" prefWidth="200.0">
               <children>
                  <Label text="Risultato">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtRisultato" />
               </children>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
